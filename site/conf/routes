#Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET       /                         controllers.Application.index

GET       /map                      controllers.Application.map

POST	    /api/collections/new      controllers.Api.createCollection

GET				/api/images/addToCollection controllers.Api.addToCollection(imageId: Long, collectionId: Long, fromCollectionId: Option[Long])

GET		   /api/map/markers/all       controllers.Api.allMarkers

GET		   /api/map/markers/balloon   controllers.Api.balloon(imageId: Long)

GET			 /upload										controllers.Upload.page

GET			/login											controllers.Accounts.loginForm

POST		/login											controllers.Accounts.loginSubmit

GET			/signup											controllers.Accounts.signupForm

POST		/signup										controllers.Accounts.signupSubmit

GET			/image/:filename						controllers.FileServer.getImage(filename: String)

GET			/image/thumb/:filename				controllers.FileServer.getThumb(filename: String)

POST			/api/images/upload					controllers.Api.imageUpload

GET      /photoqueue                controllers.Application.photoQueue

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file              controllers.Assets.at(path="/public", file)

